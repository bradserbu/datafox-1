<h1> List all companies </h1>

<table>
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Year</th>
        <th>Stage</th>
        <th>Field</th>
        <th>Detail</th>
    </tr>

    <% @companies.each do |company| %>
        <tr>
            <td> <%= company.name %> </td>
            <td> <%= company.category %> </td>
            <td> <%= company.year %> </td>
            <td> <%= company.stage %> </td>
            <td> <%= company.field %> </td>
            <td> <%= company.detail %> </td>
        </tr>
    <% end %>
</table>
